{
  "name": "reasonable-router",
  "version": "2.0.0-beta.1",
  "description": "A reasonable (and reasonably simple) router for React",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "flow": "flow",
    "test": "jest",
    "test:ci": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch --notify",
    "test:all": "npm run lint && npm run flow && npm run test",
    "build:lib": "babel components -d lib",
    "prepublish": "in-publish && (rimraf lib && npm run test:all && npm run build:lib) || exit 0"
  },
  "jest": {
    "collectCoverageFrom": [
      "components/*.js",
      "!components/index.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jumoel/reasonable-router.git"
  },
  "keywords": [
    "react",
    "router",
    "routing",
    "route",
    "routes"
  ],
  "author": "Julian MÃ¸ller <code@jumoel.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jumoel/reasonable-router/issues"
  },
  "homepage": "https://github.com/jumoel/reasonable-router#readme",
  "dependencies": {
    "history": "^4.3.0",
    "route-parser": "^0.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "coveralls": "^2.11.14",
    "enzyme": "^2.5.0",
    "eslint": "^3.5.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flowtype": "^2.17.1",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.35.0",
    "in-publish": "^2.0.0",
    "jest": "^16.0.1",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-test-renderer": "^15.3.2",
    "rimraf": "^2.5.4"
  },
  "peerDependencies": {
    "react": "15.x"
  }
}
